#!/usr/bin/env bash


DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
APP=jira-data-loader

. ${DIR}/../env/env


function load_all_data() {
  cd $DIR/..
  if [ -z "$JIRA_PASS_ENC" ]; then
    java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                             --user="${JIRA_USER}"                \
                             --pass-enc=${JIRA_PASS_ENC}          \
                             --url="${JIRA_URL}"                  \
                             --all
  else
    java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                             --user="${JIRA_USER}"                \
                             --pass="${JIRA_PASS}"                \
                             --url="${JIRA_URL}"                  \
                             --all
  fi
}

function load_recent_data() {
  cd $DIR/..
  if [ -z "$JIRA_PASS_ENC" ]; then
    java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                             --user=${JIRA_USER}                  \
                             --pass-enc=${JIRA_PASS_ENC}          \
                             --url=${JIRA_URL}
  else
    java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                             --user=${JIRA_USER}                  \
                             --pass=${JIRA_PASS}                  \
                             --url=${JIRA_URL}
  fi
}

function remove_all_data() {
  cd $DIR/..
  java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                           --clean
}

function encrypt_password() {
  if [ -z "$1" ]; then
    echo "error: password not set"
  else
    cd $DIR/..
    java -jar lib/${APP}.jar --spring.profiles.active=main,custom \
                             --encrypt --pass="$1"
  fi
}


case "$1" in
    "all")
        load_all_data
    ;;
    "recent")
        load_recent_data
    ;;
    "clean")
        remove_all_data
    ;;
    "encrypt")
        encrypt_password $2
    ;;
    *)
    echo "Usage: $(basename $0) {all|recent|clean|encrypt <pass>}"
    ;;
esac
